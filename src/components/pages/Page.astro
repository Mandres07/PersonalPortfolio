---
import Layout from "@/layouts/Layout.astro";
import About from "@/components/sections/About.astro";
import Experience from "@/components/sections/Experience.astro";
import Hero from "@/components/sections/Hero.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Footer from "@/components/sections/Footer.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import ThemeSwitch from "@/components/ThemeSwitch.astro";
import Education from "@/components/sections/Education.astro";
import Images from "@/components/sections/Images.astro";
import Navigation from "@/components/sections/Navigation.astro";
import { type CV } from "@/types";

interface Props {
  CV: CV;
  lang: string;
}

const { CV, lang } = Astro.props;
const basics = CV.basics;
const { name, label } = basics;
---

<Layout
  title={`${name}'s Portfolio - ${label}`}
  lang={lang}
  image={basics.image}
  summary={basics.summary}
  url={basics.url}
  theme={basics.theme}
  analyticsCode={CV.analyticsCode}
>
  <div
    class="container relative grid max-w-7xl grid-cols-1 gap-4 p-8 md:gap-12 md:p-16 md:pb-10 lg:grid-cols-5 xl:gap-24"
  >
    <aside
      class="slide-enter space-y-10 ease-in lg:sticky lg:top-16 lg:col-span-2 lg:h-screen"
    >
      <Hero basics={basics} />
      <About summary={basics.summary} lang={lang} />
      <ThemeSwitch lang={lang} />
    </aside>
    <div class="slide-enter-content space-y-6 lg:col-span-3">
      <Navigation lang={lang} />
      <Experience lang={lang} className="" work={CV.work} />
      <Projects lang={lang} className="" projects={CV.projects} />
      {
        CV?.education && (
          <Education
            lang={lang}
            className="order-first"
            certificates={CV.certificates}
            education={CV.education}
          />
        )
      }
      {CV?.images && <Images lang={lang} className="" images={CV.images} />}
      <Skills lang={lang} className="" skills={CV.skills} />
    </div>
  </div>
  <Footer lang={lang} />
  <KeyboardManager lang={lang} profiles={basics.profiles} />
</Layout>

<style>
  .scrollbar-thin::-webkit-scrollbar {
    height: 8px;
  }
  .scrollbar-thumb-gray-400::-webkit-scrollbar-thumb {
    background-color: #a0aec0;
    border-radius: 4px;
  }
</style>

<style is:global>
  * {
    scrollbar-color: var(--color-button-muted) var(--color-fill);
  }

  @page {
    size: auto;
    margin: 0mm;
  }
  div.container {
    margin: auto;
    width: 100%;
  }

  @keyframes slide-enter {
    0% {
      transform: translateY(10px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .slide-enter,
    .slide-enter-content > *:not(:has(.table-of-contents)) {
      --enter-stage: 0;
      --enter-step: 400ms;
      --enter-initial: 0ms;
      animation: slide-enter 1s both 1;
      animation-delay: calc(
        var(--enter-initial) + var(--enter-stage) * var(--enter-step)
      );
    }

    .slide-enter-content > *:nth-child(1) {
      --enter-stage: 1 !important;
    }
    .slide-enter-content > *:nth-child(2) {
      --enter-stage: 2 !important;
    }
    .slide-enter-content > *:nth-child(3) {
      --enter-stage: 3 !important;
    }
    .slide-enter-content > *:nth-child(4) {
      --enter-stage: 4 !important;
    }
    .slide-enter-content > *:nth-child(5) {
      --enter-stage: 5 !important;
    }
    .slide-enter-content > *:nth-child(6) {
      --enter-stage: 6 !important;
    }
    .slide-enter-content > *:nth-child(7) {
      --enter-stage: 7 !important;
    }
    .slide-enter-content > *:nth-child(8) {
      --enter-stage: 8 !important;
    }
    .slide-enter-content > *:nth-child(9) {
      --enter-stage: 9 !important;
    }
    .slide-enter-content > *:nth-child(10) {
      --enter-stage: 10 !important;
    }
    .slide-enter-content > *:nth-child(11) {
      --enter-stage: 11 !important;
    }
    .slide-enter-content > *:nth-child(12) {
