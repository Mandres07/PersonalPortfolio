---
import Section from "../Section.astro";
import { Icon } from "astro-icon/components";

interface Skill {
  name: string;
  icon: string;
  level: string;
  keywords: string[];
}
interface Props {
  className: string;
  skills: Skill[];
  lang: string;
}
const { className, skills, lang } = Astro.props;
---

<Section className={className} title={lang == "en" ? "Skills" : "Habilidades"} id="skills">
   <ul
      class="inline-flex flex-wrap gap-4 font-mono [&>li>svg]:text-skin-hue [&>li]:text-sm"
   >
      {
         skills.map(({ name, icon, level }) => {
            return (
               <li
                  class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/20 bg-skin-button-accent/20 px-1 py-0.5 text-xs text-skin-hue"
                  title={level}
               >
                  {icon && <Icon name={icon} width={16} height={16} />}{" "}
                  <span>{name}</span>
               </li>
            );
         })
      }
   </ul>
</Section>
