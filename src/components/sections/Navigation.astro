---
interface Props {
   lang: string;
}

const { lang } = Astro.props;
---
<nav
   class="z-10 w-full bg-skin-fill/90 py-3 font-mono sticky top-0 md:block"
>
   <ul class="flex items-center justify-between">
      <li
         data-section="experience"
         class="nav-item rounded-md p-2 transition-all duration-200 ease-linear hover:border-skin-hue/20 hover:bg-skin-button-accent/20 hover:text-skin-hue"
      >
         <a href="#experience">🧑🏽‍💻 <span class="hidden md:inline">{lang == "es" ? "Experiencia" : "Experience"}</span></a>
      </li>
      <li
         data-section="work"
         class="nav-item rounded-md p-2 transition-all duration-200 ease-linear hover:border-skin-hue/20 hover:bg-skin-button-accent/20 hover:text-skin-hue"
      >
         <a href="#work">🛠️ <span class="hidden md:inline">{lang == "es" ? "Proyectos" : "Projects"}</span></a>
      </li>
      <li
         data-section="education"
         class="nav-item rounded-md p-2 transition-all duration-200 ease-linear hover:border-skin-hue/20 hover:bg-skin-button-accent/20 hover:text-skin-hue"
      >
         <a href="#education">🎓 <span class="hidden md:inline">{lang == "es" ? "Educación" : "Education"}</span></a>
      </li>
      <li
         data-section="images"
         class="nav-item rounded-md p-2 transition-all duration-200 ease-linear hover:border-skin-hue/20 hover:bg-skin-button-accent/20 hover:text-skin-hue"
      >
         <a href="#images">🏞️ <span class="hidden md:inline">{lang == "es" ? "Imágenes" : "Images"}</span></a>
      </li>
      <li
         data-section="skills"
         class="nav-item rounded-md p-2 transition-all duration-200 ease-linear hover:border-skin-hue/20 hover:bg-skin-button-accent/20 hover:text-skin-hue"
      >
         <a href="#skills">⚡️ <span class="hidden md:inline">{lang == "es" ? "Skills" : "Skills"}</span></a>
      </li>
   </ul>
</nav>

<script>
   document.addEventListener("DOMContentLoaded", () => {
      const sections = document.querySelectorAll(".main-section");
      const navItems = document.querySelectorAll(".nav-item");

      const observer = new IntersectionObserver(
         (entries) => {
            entries.forEach((entry) => {
               const id = entry.target.getAttribute("id");
               const navItem = document.querySelector(
                  `.nav-item[data-section="${id}"]`,
               );
               if (entry.isIntersecting && entry.intersectionRatio >= 0.3) {
                  navItems.forEach((item) =>
                     item.classList.remove(
                        "bg-skin-button-accent/20",
                        "text-skin-hue",
                     ),
                  );
                  navItem?.classList.add(
                     "bg-skin-button-accent/20",
                     "text-skin-hue",
                  );
               }
            });
         },
         {
            threshold: 0.3,
         },
      );
      sections.forEach((section) => observer.observe(section));
   });
</script>
